<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.PassagePost"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="封面"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle = "bold"
        android:fontFamily="sans-serif"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        />
    <ImageView
        android:id="@+id/PassagePostImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="#EBEBEB" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="从相册中选择"
        android:id="@+id/PassagePostAlbumButton"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正文"
        android:textAlignment="center"
        android:textSize="20dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="标题~"
        android:id="@+id/PassagePostTitle"
        android:gravity="top|center_vertical"
        android:background="#D2D2D2"
        android:layout_marginHorizontal="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="快和别人分享自己吧~"
        android:id="@+id/PassagePostContent"
        android:gravity="top|left"
        android:background="#F4F4F4"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="发送"
        android:id="@+id/PassagePostSubmitButton"
        />

</LinearLayout>