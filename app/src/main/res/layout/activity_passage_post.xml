<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.PassagePost"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文案"
        android:textAlignment="center"
        android:textSize="40dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="标题~"
        android:id="@+id/PassagePostTitle"
        android:gravity="top|left"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="快和别人分享自己吧~"
        android:id="@+id/PassagePostContent"
        android:gravity="top|left"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="封面"
        android:textAlignment="center"
        android:textSize="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/PassagePostImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="#E4E4E4">

    </ImageView>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="从相册中选择"
        android:id="@+id/PassagePostAlbumButton"/>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="发送"
        android:id="@+id/PassagePostSubmitButton"/>

</LinearLayout>